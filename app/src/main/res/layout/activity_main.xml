<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:visibility="invisible"
        />

    <ListView
        android:id="@+id/LvMainFiles"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

    </ListView>

    <TextView
        android:id="@id/android:empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/add_note_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_plus"
        android:onClick="addNewProject"/>

    <Button
        android:id="@+id/settings_note_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignTop="@+id/add_note_button"
        android:layout_toLeftOf="@+id/add_note_button"
        android:background="@drawable/ic_app_settings"
        android:layout_marginRight="8dp"
        android:onClick="showSettings"/>

    <ImageView
        android:id="@+id/createNewProjectImage"
        android:layout_width="300dp"
        android:layout_height="71dp"
        android:src="@drawable/create_new_project"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="20dp"
        />

</RelativeLayout>